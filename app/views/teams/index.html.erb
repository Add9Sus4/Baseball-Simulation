<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
<%= javascript_include_tag 'bootstrap-sortable', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'moment.min', 'data-turbolinks-track' => true %>
<%= stylesheet_link_tag    'bootstrap-sortable', 'data-turbolinks-track' => true %>

<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <h1>List Of Teams</h1>
</div>

<div class="container-fluid">
<table id="team_table" class="table-condensed table-striped table-bordered table-responsive sortable">
  <thead>
    <tr>
      <th>City</th>
      <th id=team_name_column_header data-defaultsort="desc">Name</th>
      <th>League</th>
      <th>Division</th>
      <th>Stadium</th>
      <th>Capacity</th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.city %></td>
        <td><%= link_to team.name, team %></td>
        <td><%= team.league %></td>
        <td><%= team.division %></td>
        <td><%= team.stadium %></td>
        <td><%= team.capacity %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<div class="container-fluid">
<%= link_to 'New Team', new_team_path %>
</div>
