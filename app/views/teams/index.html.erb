<p id="notice"><%= notice %></p>

<h1>List Of Teams</h1>

<table>
  <thead>
    <tr>
      <th>City</th>
      <th>Name</th>
      <th>League</th>
      <th>Division</th>
      <th>Stadium</th>
      <th>Capacity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.city %></td>
        <td><%= link_to team.name, team %></td>
        <td><%= team.league %></td>
        <td><%= team.division %></td>
        <td><%= team.stadium %></td>
        <td><%= team.capacity %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

