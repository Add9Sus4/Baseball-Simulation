            <tr>
              <td><%= link_to player.team.full_name, player.team, method: :get %></td>
              <td><%= link_to player.full_name, player, method: :get %></td>
              <td><%= number_with_precision(player.outs_recorded.to_f/3, precision: 1) %></td>
