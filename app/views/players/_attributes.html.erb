            <td class="hotcold custom-border-top"><strong><%= @player.speed_potential %></strong></strong></td>
            <td class="hotcold custom-border-top custom-border-left"><strong><%= @player.agility_potential %></strong></td>
            <td class="hotcold custom-border-top"><strong><%= @player.reaction_time_potential %></strong></td>
            <td class="hotcold custom-border-top"><strong><%= @player.arm_strength_potential %></strong></td>
            <td class="hotcold custom-border-top"><strong><%= @player.average_fielding_potential %></strong></td>
            <td class="hotcold custom-border-top"><strong><%= @player.average_throwing_potential %></strong></td>
            <td class="hotcold custom-border-top"><strong><%= @player.intelligence_potential %></strong></td>
            <td class="hotcold custom-border-top"><strong><%= @player.endurance_potential %></strong></td>
            <td class="custom-border-left"></td>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
